{
  "name": "me-io/slim-api",
  "description": "A \"No-frills\" CRUD RESTful JSON API Boilerplate built on Slim 3, MongoDB, JWT",
  "license": "MIT",
  "version": "1.0.0",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=7.0",
    "slim/slim": "~3.10",
    "vlucas/valitron": "~1",
    "firebase/php-jwt": "~5",
    "monolog/monolog": "~1.23",
    "mongodb/mongodb": "~1.4",
    "league/event": "~2.1",
    "me-io/php-lodash": "~1"
  },
  "require-dev": {
    "phpunit/phpunit": "~6",
    "fzaninotto/faker": "~1",
    "squizlabs/php_codesniffer": "~3",
    "overtrue/phplint": "~1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true
  }
}
